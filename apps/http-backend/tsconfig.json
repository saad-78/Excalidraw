{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@repo/*": ["packages/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
